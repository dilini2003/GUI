<Window x:Class="Book_Desktop_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book_Desktop_Application"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\DELL\Documents\GitHub\GUI\frontend\public\images\bannerbg.jpg"/>
        </Grid.Background>

        <TextBlock Grid.Row="0"
                   Foreground="Black"
                   Padding="15" 
                   FontSize="50" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Bookly"/>

        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="700">
            <TextBlock FontSize="26" 
                       Foreground="#333"
                       FontWeight="Bold" 
                       TextAlignment="Center"
                       Text="Welcome to Bookly Management System!"/>
            <TextBlock FontSize="18" 
                       Foreground="#666" 
                       TextAlignment="Center" 
                       Margin="10,10,10,20" 
                       Text="Manage your bookstore with ease. Add, edit, and organize books seamlessly."/>
        </StackPanel>

        <StackPanel Grid.Row="2"  
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button FontWeight="Bold" 
                    FontSize="18"
                    Margin="20"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Width="190" 
                    Height="66" 
                    Click="LoginWindow"
                    Cursor="Hand">  
                Login
                <!--Design the Button-->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#388E3C" CornerRadius="25" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <!--Hover property for Button-->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button FontWeight="Bold" 
                    FontSize="18"
                    Margin="20"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Width="190" 
                    Click="exit"
                    Height="66"  
                    Cursor="Hand">
                Exit
                <!--Design the Button-->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#D32F2F" CornerRadius="25" Padding="10, 0 ,10 ,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <!--Hover property for Button-->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
       
    </Grid>
</Window>
