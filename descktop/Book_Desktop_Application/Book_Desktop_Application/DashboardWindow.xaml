<Window x:Class="Book_Desktop_Application.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book_Desktop_Application"
        mc:Ignorable="d"
        Title="DashboardWindow" WindowState="Maximized">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\DELL\Documents\GitHub\GUI\frontend\public\images\back2.jpg" Opacity="0.7"/>
        </Grid.Background>
        <TextBlock Grid.Row="0"
Foreground="Black" 
Padding="5"
FontSize="50" 
FontWeight="Bold" 
HorizontalAlignment="Center" TextDecorations="Underline"
VerticalAlignment="Center"
Text="Welcome Bookly!"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" >
